{
  "name": "Customer",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "countryCode": {
      "type": "string",
      "required": true
    },
    "verified": {
      "type": "string",
      "default": false
    },
    "authyId": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "businesses": {
      "type": "hasMany",
      "model": "Business",
      "foreignKey": "customerId",
      "through": "Member"
    },
    "visits": {
      "type": "hasMany",
      "model": "Customer_Visit",
      "foreignKey": "customerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
